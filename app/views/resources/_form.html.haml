= form_for @resource , :class => "bs-example" do |f|
  - if @resource.errors.any?
    #error_explanation      
      %ul
        - @resource.errors.each do |attr, msg|
          %li= msg
  
  .form-group
    = f.label "عنوان به فارسی", :class => "control-label" 
    = f.text_field :title_fa, :class => "form-control"
  .form-group
    = f.label "عنوان به انگلیسی", :class => "control-label" 
    = f.text_field :title_en, :class => "form-control"
  .form-group
    = f.label "لینک منبع", :class => "control-label" 
    = f.text_field :link, :class => "form-control"

  .form-group
    = f.label "توضیحات به فارسی"
    %br
      %div.editor
      = f.text_area :text_html_fa, :class => "ckeditor"
    
  .form-group
    = f.label "توضیحات به انگلیسی"
    = f.text_area :text_html_en, :class => "ckeditor"
  .form-group
    = f.label "تصویر"
    %br
    - if @resource.image.present?
      = image_tag @resource.image(:small)
    = f.file_field :image
  .form-group
    = f.submit 'ثبت', :class => "btn btn-default"
