= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg
  
  .field   
    = f.file_field :image
  .field
    = f.label :name_en
    = f.text_field :name_en
  .field
    = f.label :name_fa
    = f.text_field :name_fa
  .field
    = f.label :education_fa
    = f.text_area :education_fa
  .field
    = f.label :education_en
    = f.text_area :education_en
  .field
    = f.label :email
    = f.text_area :email
  .field
    = f.label :description_fa
    = f.text_area :description_fa
  .field
    = f.label :description_en
    = f.text_area :description_en
  .actions
    = f.submit 'Save'
