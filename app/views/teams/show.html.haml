%p#notice= notice
.page-header.go-center    
  %h1= t('teams')
.clear-float
.middle-div.go-center
  %p= image_tag @team.image(:medium)
  %p
    %b= t('team.name') 
    = @team.name
  
  %p
    %b= t('team.education')
    = @team.education
  
  %p
    %b= t('team.email')
    = @team.email
  %p
    %b= t('team.description') 
    = @team.description
  

  = link_to (image_tag 'edit-icons.png'), edit_team_path(@team)
  \|
  = link_to 'Back', teams_path
