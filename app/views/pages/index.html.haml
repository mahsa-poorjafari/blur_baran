.innerCenter{:id => I18n.locale}
  %h1= t('page')

  %table
    %tr
      %th Title fa
      %th Title en
      %th Text fa
      %th Text en
      %th
      %th
      %th

    - @pages.each do |page|
      %tr
        %td= page.title_fa
        %td= page.title_en
        %td= page.text_fa
        %td= page.text_en
        %td= link_to 'Show', page
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to t(form.new), new_page_path, :class => "btn"
