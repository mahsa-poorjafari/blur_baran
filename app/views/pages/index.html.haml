.page-title.go-center
  %h1=  t('page')
.clear-float
%table
  
  - @pages.each do |page|
    %tr
      %td= link_to page.title_fa, page
      %td= link_to page.title_en, page
      
      %td= link_to (image_tag 'edit-icons.png'), edit_page_path(page)
      %td= link_to (image_tag 'delete-icons.png'), page, :method => :delete, :data => { :confirm => 'Are you sure?' }
.clear-float
-if is_admin?     
  = link_to new_page_path do
    = image_tag "add-icons.png"
    = t('form.New')
  %br
  
    
