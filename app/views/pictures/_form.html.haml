= form_for @picture=Picture.new do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "توضیحات عکس"
    = f.text_area :description
  .field
    
    = f.file_field :image
  .actions
    = f.submit 'ثبت عکس'
