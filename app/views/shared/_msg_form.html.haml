= form_for @message ||= Message.new, :html => {:class => "contact"} do |f|
  - if @message.errors.any?
    #error_explanation{:class => I18n.locale}                   
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %legend{:class => I18n.locale}
      %span 
        = t("msg.contact-title")
      =image_tag "msg-icon.png"
      -if flash[:notice]
        .notice-msg{:class => I18n.locale}=t("notice-msg") 
      .clrear-float 
  .lable{:class => I18n.locale, :id => I18n.locale}
    = f.label t("msg.contact-name")    
    %span.Necessary= t("Required")
    = f.text_field :name, :class => "form-feild"
    
    
  .lable{:class => I18n.locale, :id => I18n.locale}
    = f.label t("msg.contact-email")
    %span.Necessary= t("Required")
    = f.text_field :email, :class => "form-feild"
    
    
  .lable{:class => I18n.locale, :id => I18n.locale}
    = f.label t("msg.contact-phone")
    = f.text_field :phone, :class => "form-feild"
    
  .lable{:class => I18n.locale, :id => I18n.locale}
    = f.label t("msg.contact-msg")        
    %span.Necessary= t("Required") 
    = f.text_area :message, :class => "form-feild"
         
  .form-group
    = f.submit t("msg.contact-btn"), :class=>"send"
