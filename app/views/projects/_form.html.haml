= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label t('form.category')
    = f.select :project_category_id, options_for_select(ProjectCategory.find(:all).collect{ |t| [t.title, t.id] }, :prompt => 'Select')
  .field
    = f.label t('form.title')
    = f.text_field :title
  .field
    = f.label t('form.Description')
    %br
    %div.editor
      = f.text_area :description, :class => "ckeditor"
  .field
    = f.label t('form.employer')
    = f.select :employer_id, options_for_select(Employer.find(:all).collect{ |t| [t.title, t.id] }, :prompt => 'Select')
  
  =render "/pictures/form"
    
  .actions
    = f.submit t('form.save')
