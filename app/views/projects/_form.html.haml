= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "گروه"
    = f.select :project_category_id, options_for_select(ProjectCategory.find(:all).collect{ |t| [t.title, t.id] }, :prompt => 'Select')
  .field
    = f.label "عنوان پروژه"
    = f.text_field :title
  .field
    = f.label "توضیحات"
    = f.text_area :description
  .field
    = f.label "کارفرما"
    = f.select :employer_id, options_for_select(Employer.find(:all).collect{ |t| [t.title, t.id] }, :prompt => 'Select')
  
  =render "/pictures/form"
    
  .actions
    = f.submit 'ثبت'
