.innerCenter{:id => I18n.locale}
  %h1= t('projects')  

  %table
    %tr
      %th= t('form.title')      
      %th= t('form.employer') 
      %th
      %th
      %th

    - @projects.each do |project|
      %tr
        %td= link_to project.title, project
        
        %td= project.employer.title
       
        %td= link_to (image_tag 'edit-icons.png'), edit_project_path(project)
        %td= link_to (image_tag 'delete-icons.png'), project, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to t('form.New'), new_project_path, :class => "btn"
