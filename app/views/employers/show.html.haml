- if notice    
  .alert.alert-success= notice   
.col-lg-12
  .page-header.go-center    
    %h1= t('employers')
    -if is_admin? 
      = link_to (image_tag 'edit-icons.png'), edit_employer_path(@employer)
      \|
      = link_to t('back'), employers_path
.middle-div.go-center{:id => I18n.locale, :class => I18n.locale}         
  .show-employers      
    %blockquote{ :class => ('pull-left' if I18n.locale == :'en') || ('pull-right' if I18n.locale == :'fa')}      
      %p
        .column= t('form.title')
        .column= @employer.title
        .column= t('form.web')                  
        .column= link_to  @employer.web_site, "http://#{@employer.web_site}", :target => "blank"
      
    %div{ :class => ('pull-left' if I18n.locale == :'fa') || ('pull-right' if I18n.locale == :'en')}      
      = image_tag @employer.logo(:medium), :class => "img-thumbnail"
    .clear-float

%br
.footer
  .foot-links.go-center 
    
